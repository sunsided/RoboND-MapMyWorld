<?xml version="1.0"?>

<robot name="my_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="$(find where_am_i)/urdf/my_robot.gazebo" />

    <link name="robot_footprint"/>

    <joint name="robot_footprint_joint" type="fixed">
        <origin xyz="0 0 0" rpy="0 0 0" />
        <parent link="robot_footprint"/>
        <child link="chassis" />
    </joint>

    <link name="chassis">
        <pose>0 0 0.1 0 0 0</pose>

        <inertial>
            <mass value="15.0"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia
                    ixx="0.1" ixy="0" ixz="0"
                    iyy="0.1" iyz="0"
                    izz="0.1"
            />
        </inertial>

        <collision name="collision">
            <origin xyz="0 0 0" rpy=" 0 0 0"/>
            <geometry>
                <box size=".4 .2 .1"/>
            </geometry>
        </collision>

        <visual name="chassis_visual">
            <origin xyz="0 0 0" rpy=" 0 0 0"/>
            <geometry>
                <box size=".4 .2 .1"/>
            </geometry>
        </visual>

    </link>

    <link name="led_visual">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.005"/>
            </geometry>
        </visual>
    </link>

    <joint type="fixed" name="led_visual_hinge">
        <origin xyz="-0.15 0.05 0.05" rpy=" 0 0 0"/>
        <child link="led_visual"/>
        <parent link="chassis"/>
        <axis xyz="0 0 1" rpy="0 0 0"/>
    </joint>

    <link name="front_left_wheel">
        <visual name="front_left_wheel_visual">
            <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
            <geometry>
                <cylinder radius="0.075" length="0.05"/>
            </geometry>
        </visual>

        <collision name="front_left_wheel_collision">
            <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
            <geometry>
                <cylinder radius="0.075" length="0.05"/>
            </geometry>
        </collision>

        <inertial>
            <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
            <mass value="2.5"/>
            <inertia
                    ixx="0.1" ixy="0" ixz="0"
                    iyy="0.1" iyz="0"
                    izz="0.1"/>
        </inertial>
    </link>

    <link name="back_left_wheel">
        <visual name="front_left_wheel_visual">
            <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
            <geometry>
                <cylinder radius="0.075" length="0.05"/>
            </geometry>
        </visual>

        <collision name="back_left_wheel_collision">
            <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
            <geometry>
                <cylinder radius="0.075" length="0.05"/>
            </geometry>
        </collision>

        <inertial>
            <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
            <mass value="2.5"/>
            <inertia
                    ixx="0.1" ixy="0" ixz="0"
                    iyy="0.1" iyz="0"
                    izz="0.1"/>
        </inertial>
    </link>

    <link name="front_right_wheel">
        <visual name="front_right_wheel_visual">
            <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
            <geometry>
                <cylinder radius="0.075" length="0.05"/>
            </geometry>
        </visual>

        <collision name="front_right_wheel_collision">
            <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
            <geometry>
                <cylinder radius="0.075" length="0.05"/>
            </geometry>
        </collision>

        <inertial>
            <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
            <mass value="2.5"/>
            <inertia
                    ixx="0.1" ixy="0" ixz="0"
                    iyy="0.1" iyz="0"
                    izz="0.1"/>
        </inertial>
    </link>

    <link name="back_right_wheel">
        <visual name="back_right_wheel_visual">
            <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
            <geometry>
                <cylinder radius="0.075" length="0.05"/>
            </geometry>
        </visual>

        <collision name="back_right_wheel_collision">
            <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
            <geometry>
                <cylinder radius="0.075" length="0.05"/>
            </geometry>
        </collision>

        <inertial>
            <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
            <mass value="2.5"/>
            <inertia
                    ixx="0.1" ixy="0" ixz="0"
                    iyy="0.1" iyz="0"
                    izz="0.1"/>
        </inertial>
    </link>

    <joint type="continuous" name="front_left_wheel_hinge">
        <origin xyz="0.1 0.15 -0.025" rpy="0 0 0"/>
        <child link="front_left_wheel"/>
        <parent link="chassis"/>
        <axis xyz="0 1 0" rpy="0 0 0"/>
        <limit effort="10000" velocity="1000"/>
        <dynamics damping="1.0" friction="1.0"/>
    </joint>

    <joint type="continuous" name="front_right_wheel_hinge">
        <origin xyz="0.1 -0.15 -0.025" rpy="0 0 0"/>
        <child link="front_right_wheel"/>
        <parent link="chassis"/>
        <axis xyz="0 1 0" rpy="0 0 0"/>
        <limit effort="10000" velocity="1000"/>
        <dynamics damping="1.0" friction="1.0"/>
    </joint>

    <joint type="continuous" name="back_left_wheel_hinge">
        <origin xyz="-0.1 0.15 -0.025" rpy="0 0 0"/>
        <child link="back_left_wheel"/>
        <parent link="chassis"/>
        <axis xyz="0 1 0" rpy="0 0 0"/>
        <limit effort="10000" velocity="1000"/>
        <dynamics damping="1.0" friction="1.0"/>
    </joint>

    <joint type="continuous" name="back_right_wheel_hinge">
        <origin xyz="-0.1 -0.15 -0.025" rpy="0 0 0"/>
        <child link="back_right_wheel"/>
        <parent link="chassis"/>
        <axis xyz="0 1 0" rpy="0 0 0"/>
        <limit effort="10000" velocity="1000"/>
        <dynamics damping="1.0" friction="1.0"/>
    </joint>

    <link name="camera">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.05 0.05 0.05"/>
            </geometry>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.05 0.05 0.05"/>
            </geometry>
        </collision>

        <inertial>
            <mass value="0.1"/>
            <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
            <box_inertia
                    m="0.1" x="0.05" y="0.05" z="0.05"/>
            <inertia
                    ixx="1e-6" ixy="0" ixz="0"
                    iyy="1e-6" iyz="0"
                    izz="1e-6"
            />
        </inertial>
    </link>

    <joint type="fixed" name="camera_joint">
        <axis xyz="0 1 0" rpy="0 0 0"/>
        <origin xyz="0.2 0 0" rpy="0 0 0"/>
        <parent link="chassis"/>
        <child link="camera"/>
    </joint>

    <link name="hokuyo">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://where_am_i/meshes/hokuyo.dae" />
            </geometry>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.1 0.1 0.1"/>
            </geometry>
        </collision>

        <inertial>
            <mass value="1e-5"/>
            <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
            <inertia
                    ixx="1e-6" ixy="0" ixz="0"
                    iyy="1e-6" iyz="0"
                    izz="1e-6"
            />
        </inertial>
    </link>

    <joint type="fixed" name="hokuyo_joint">
        <axis xyz="0 1 0" rpy="0 0 0"/>
        <origin xyz="0.15 0 0.05" rpy="0 0 0"/>
        <parent link="chassis"/>
        <child link="hokuyo"/>
    </joint>

    <gazebo reference="front_right_wheel">
        <material>Gazebo/DarkGrey</material>
    </gazebo>

    <gazebo reference="front_left_wheel">
        <material>Gazebo/DarkGrey</material>
    </gazebo>

    <gazebo reference="led_visual">
        <material>Gazebo/GreenGlow</material>
    </gazebo>

    <gazebo reference="chassis">
        <material>Gazebo/Gold</material>
    </gazebo>

    <gazebo reference="camera">
        <material>Gazebo/Grey</material>
    </gazebo>

</robot>
